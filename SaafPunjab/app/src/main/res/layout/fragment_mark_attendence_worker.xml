<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f8f8f8"
    tools:context=".worker">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:background="#f8f8f8"
        >

        <Button
            android:id="@+id/check"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="right"
            android:backgroundTint="#f39c11"
            android:drawableRight="@drawable/check"
            android:elevation="0dp"
            android:fontFamily="sans-serif-light"
            android:minHeight="48dp"
            android:text="CHECK STATUS"
            android:textColor="@color/white"
            android:textSize="8dp">

        </Button>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-medium"
            android:text="Select UC"
            android:textColor="#555555"
            android:textSize="12sp">
        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/division_dropdown_linear"
            >
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:elevation="2dp"

                android:background="@drawable/custom_spinner"
                >

            </Spinner>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:layout_marginTop="25dp"
            android:orientation="vertical"
            >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@color/black"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/workerimg1"
            ></ImageView>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#119957"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#119957"
                android:orientation="vertical"

                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#119957"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"
                        android:layout_marginTop="15dp"
                        android:src="@drawable/icons8_user_45px_1">

                    </ImageView>

                    <TextView
                        android:fontFamily="sans-serif-light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="35dp"
                        android:layout_marginTop="15dp"
                        android:text="Name: "
                        android:textColor="@color/white"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="4dp"
                        android:fontFamily="sans-serif-light"
                        android:text="Bilal Ahmad"
                        android:textColor="@color/white"
                        android:textSize="17sp" />



                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#119957"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"
                        android:layout_marginTop="6dp"
                        android:src="@drawable/icons8_price_tag_43px">

                    </ImageView>

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="sans-serif-light"
                        android:layout_marginLeft="35dp"
                        android:text="Emp #: "
                        android:textColor="@color/white"
                        android:textSize="17sp" />

                    <TextView

                        android:id="@+id/empno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="4dp"
                        android:fontFamily="sans-serif-light"
                        android:text="Bilal Ahmad"
                        android:textColor="@color/white"
                        android:textSize="17sp" />



                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#119957"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"
                        android:layout_marginTop="6dp"
                        android:src="@drawable/icons8_obelisk_43px">

                    </ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="sans-serif-light"
                        android:layout_marginLeft="35dp"
                        android:text="UC: "
                        android:textColor="@color/white"
                        android:textSize="17sp" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="4dp"
                        android:fontFamily="sans-serif-light"
                        android:text="Bilal Ahmad"
                        android:textColor="@color/white"
                        android:textSize="17sp" />



                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#119957"
                    android:orientation="horizontal"
                    android:layout_marginBottom="0dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"
                        android:layout_marginTop="6dp"
                        android:src="@drawable/icons8_investment_portfolio_43px">
                    </ImageView>

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="sans-serif-light"
                        android:layout_marginLeft="35dp"
                        android:text="Shift: "
                        android:textColor="@color/white"
                        android:textSize="17sp" />

                    <TextView

                        android:id="@+id/shift"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="4dp"
                        android:fontFamily="sans-serif-light"
                        android:text="Bilal Ahmad"
                        android:textColor="@color/white"
                        android:textSize="17sp" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#119957"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"
                        android:layout_marginTop="6dp"
                        android:src="@drawable/schedule_43px">

                    </ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="sans-serif-light"
                        android:layout_marginLeft="35dp"
                        android:layout_marginBottom="15dp"
                        android:text="Date &amp; Time: 08 June,2022 | 14:12:12 "
                        android:textColor="@color/white"
                        android:textSize="17sp" />




                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>




    </LinearLayout>
</ScrollView>