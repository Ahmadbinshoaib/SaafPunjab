<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="7dp"
        app:strokeWidth="1.2dp"
        app:strokeColor="#d9d5d4"
        app:cardUseCompatPadding="true"

        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="6dp"
            android:src="@drawable/icons8_menu_vertical_45px">

        </ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/name"
                android:layout_width="365dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="6dp"
                android:fontFamily="sans-serif-black"
                android:text="Iqbal Javed"
                android:textColor="#2B2929"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/leavetype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:paddingRight="3dp"
                android:fontFamily="sans-serif-medium"
                android:text="Earned Leave"
                android:textColor="#2B2929"
                android:textSize="9sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="16dp"
                app:cardCornerRadius="200dp"
                android:id="@+id/cd"
                >

            <TextView
                android:id="@+id/status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:paddingRight="8dp"
                android:paddingLeft="8dp"
                android:fontFamily="sans-serif-black"
                android:text="Pending"
                android:textColor="#2B2929"
                android:textSize="6sp" />

            </androidx.cardview.widget.CardView>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-black"
                    android:text="Date From"
                    android:textColor="#2B2929"
                    android:textSize="8sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="sans-serif-black"
                    android:layout_weight="1"
                    android:text="Date To"
                    android:textColor="#2B2929"
                    android:textSize="8sp" />
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="9dp"
                    android:fontFamily="sans-serif-black"
                    android:text="No of Days"
                    android:textColor="#2B2929"
                    android:textSize="8sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/datefrom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-light"
                    android:text="02-02-2022"
                    android:textColor="#2B2929"
                    android:layout_marginBottom="6dp"
                    android:textSize="9sp" />
                <TextView
                    android:id="@+id/dateto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:layout_weight="1"
                    android:text="02-02-2022"
                    android:textColor="#2B2929"
                    android:textSize="9sp" />
                <TextView
                    android:id="@+id/noOfdays"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="35dp"
                    android:fontFamily="sans-serif-light"
                    android:text="01"
                    android:textColor="#2B2929"
                    android:textSize="9sp" />
            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>


</LinearLayout>