<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#119957"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#119957"
            android:orientation="vertical"

            >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#119957"

            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="28dp"
                android:src="@drawable/icons8_user_45px_1">

            </ImageView>

            <TextView
                android:fontFamily="sans-serif-light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="28dp"
                android:text="Name: "
                android:textColor="@color/white"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:layout_marginLeft="4dp"
                android:fontFamily="sans-serif-light"
                android:text="Bilal Ahmad"
                android:textColor="@color/white"
                android:textSize="17sp" />



        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#119957"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="6dp"
                    android:src="@drawable/icons8_price_tag_43px">

                </ImageView>

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                 android:layout_marginTop="5dp"
                    android:fontFamily="sans-serif-light"
                    android:layout_marginLeft="35dp"
                    android:text="Emp #: "
                    android:textColor="@color/white"
                    android:textSize="17sp" />

                <TextView

                    android:id="@+id/empno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="4dp"
                    android:fontFamily="sans-serif-light"
                    android:text="Bilal Ahmad"
                    android:textColor="@color/white"
                    android:textSize="17sp" />



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#119957"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="6dp"
                    android:src="@drawable/icons8_obelisk_43px">

                </ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="sans-serif-light"
                    android:layout_marginLeft="35dp"
                    android:text="UC: "
                    android:textColor="@color/white"
                    android:textSize="17sp" />

                <TextView

                    android:id="@+id/uc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="4dp"
                    android:fontFamily="sans-serif-light"
                    android:text="Bilal Ahmad"
                    android:textColor="@color/white"
                    android:textSize="17sp" />



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#119957"
                android:orientation="horizontal"
                android:layout_marginBottom="0dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="6dp"
                    android:src="@drawable/icons8_investment_portfolio_43px">
                </ImageView>

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="28dp"
                    android:fontFamily="sans-serif-light"
                    android:layout_marginLeft="35dp"
                    android:text="Shift: "
                    android:textColor="@color/white"
                    android:textSize="17sp" />

                <TextView

                    android:id="@+id/shift"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="4dp"
                    android:fontFamily="sans-serif-light"
                    android:text="Bilal Ahmad"
                    android:textColor="@color/white"
                    android:textSize="17sp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f6f6f6"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="13dp"

                    android:src="@drawable/icons8_sent_43px">

                </ImageView>

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="10dp"
                    android:text="Feedback "
                    android:textColor="@color/black"
                    android:textSize="17sp" />




            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f6f6f6"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="13dp"
                    android:src="@drawable/icons8_upload_43px">
                </ImageView>

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="sans-serif-light"
                    android:layout_marginLeft="37dp"
                    android:text="Logout"
                    android:textColor="@color/black"
                    android:textSize="17sp" />



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#e79913"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="19dp"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/icons8_inquiry_43px_1">
                </ImageView>

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="23dp"
                    android:fontFamily="sans-serif-light"
                    android:layout_marginLeft="35dp"
                    android:text="Logout"
                    android:textColor="@color/white"
                    android:textSize="17sp" />



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#e79913"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/icons8_info_43px">

                </ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="sans-serif-light"
                    android:layout_marginLeft="35dp"
                    android:text="Help"
                    android:textColor="@color/white"
                    android:textSize="17sp" />





            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#e79913"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/icons8_silent_call_43px">

                </ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="sans-serif-light"
                    android:layout_marginLeft="35dp"
                    android:text="Contact"
                    android:textColor="@color/white"
                    android:textSize="17sp" />






            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#e79913"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/icons8_language_43px">

                </ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="sans-serif-light"
                    android:layout_marginLeft="35dp"
                    android:text="Language"
                    android:textColor="@color/white"
                    android:textSize="17sp" />





            </LinearLayout>






        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>