<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f8f8f8"
    tools:context=".worker">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:background="#f8f8f8"
        >


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-medium"
            android:text="Select Worker"
            android:textColor="#555555"
            android:textSize="12sp">
        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/division_dropdown_linear"
            >
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:elevation="2dp"

                android:background="@drawable/custom_spinner"
                >

            </Spinner>

        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv"
            android:layout_width="match_parent"
            android:layout_height="440dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="10dp"
            ></androidx.recyclerview.widget.RecyclerView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:background="#e5e5e5"

            ></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:gravity="center"

            >

        <Button
            android:layout_width="125dp"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="#109d59"
            android:fontFamily="sans-serif-medium"
            android:minHeight="45dp"
            android:minWidth="120dp"
            android:layout_marginRight="5dp"
            android:text="Leave Quota"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="10sp">
        </Button>
            <Button
                android:id="@+id/applyLeave"
                android:layout_width="125dp"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="#2f80eb"
                android:fontFamily="sans-serif-medium"
                android:minHeight="45dp"
                android:minWidth="120dp"
                android:textAllCaps="false"
                android:text="Apply leave"
                android:textColor="@color/white"
                android:textSize="10sp">
            </Button>

        </LinearLayout>







    </LinearLayout>
</ScrollView>